{% extends 'layout.html.twig' %}

{% block title %}Чат с пользователем{% endblock %}

{% block body %}
<div class="col-md-9">
    <div class="page-header">
        <h1>Сообщения</h1>
    </div>

    {% for message in messages %}
    <div class="panel panel-default">
        <div class="panel-heading">{{ message.sender }}</div>
        <div class="panel-body">
            {{ message.text }}
        </div>
    </div>
    {% endfor %}

    <form class="form-horizontal" method="post">
        <fieldset>
            <legend>Написать сообщение</legend>
            <div class="form-group">
                <label for="textArea" class="col-lg-2 control-label">Текст сообщения</label>
                <div class="col-lg-10">
                    <textarea class="form-control" rows="3" id="textArea" name="message"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
{% endblock %}

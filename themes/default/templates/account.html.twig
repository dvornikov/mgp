{% extends 'layout.html.twig' %}

{% block body %}
<div class="col-md-9">
    <div class="page-header">
        <h1>Чаты с пользователями</h1>
    </div>

    {% for chat in chats %}
    <div class="panel panel-default">
        {% if chat.receiver_id == user.id %}
        <div class="panel-heading"><a href="/index.php?action=chat&amp;user={{ chat.sender_id }}">Чат с {{ chat.sender }}</a></div>
        {% else %}
        <div class="panel-heading"><a href="/index.php?action=chat&amp;user={{ chat.receiver_id }}">Чат с {{ chat.receiver }}</a></div>
        {% endif %}
        <div class="panel-body">
            <small>Последнее сообщение от {{ chat.sender }}:</small> <br> {{ chat.text }}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
